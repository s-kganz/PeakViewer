#: kivy 1.11.1
#: set HISTORY_ENTRY_SIZE 50
<HistoryEntry@BoxLayout>:
    status: status
    name: 'Entry #1'
    orientation: 'horizontal'
    size_hint_y: None
    height: HISTORY_ENTRY_SIZE
    canvas.before:
        Color:
            rgba: 0.18, 0.18, 0.18, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: 5
        orientation: 'vertical'
        Label:
            markup: True
            halign: 'left'
            text_size: self.size
            text: "[i]{}[/i]".format(root.tr.name)
        Label:
            text_size: self.size
            halign: 'left'
            text: root.tr.status
    VerticalSeparator:
    BoxLayout:
        orientation: 'vertical'
        width: HISTORY_ENTRY_SIZE
        size_hint_x: None
        Button:
            background_normal: ''
            background_color: .22, .22, .22, 1
            text: 'Info'
            on_release: root.tr.create_info_dialog()
        Button:
            background_normal: ''
            background_color: .22, .22, .22, 1
            id: status
            text: 'Open'
            on_release: root.tr.create_dialog()


<History@BoxLayout>:
    entry_layout: entry_layout
    padding: 5
    orientation: 'vertical'
    Label:
        text_size: self.size
        text: 'History'
        halign: 'left'
        size_hint_y: None
        height: TAB_HEIGHT
    HorizontalSeparator:
    ScrollView:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        StackLayout:
            id: entry_layout
            orientation: 'tb-rl'
            size_hint_y: None
            padding: 5
            spacing: 5
            height: max(self.parent.height, len(self.children) * (HISTORY_ENTRY_SIZE + self.padding[0]) + self.spacing[0])
            



